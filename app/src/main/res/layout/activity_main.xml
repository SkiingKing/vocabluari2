<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/slesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/count_text"
        android:text="/"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:textSize="19sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/slesh"
        android:textSize="19sp"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/text_result_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/right_word"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/right_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/ln"
        android:layout_below="@+id/right_word"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <Button
        android:id="@+id/answer_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_states"
        android:text="@string/answer_1"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/answer_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_states"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/answer_one"
        android:text="@string/answer_2" />

    <Button
        android:id="@+id/answer_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_states"
        android:layout_alignParentBottom="true"
        android:text="@string/answer_3"
        android:layout_toRightOf="@+id/answer_two"/>



    </LinearLayout>

   <Button
       android:id="@+id/next"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/next"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="16dp"
       android:background="@drawable/next"
       android:layout_marginBottom="30dp"/>

</RelativeLayout>